{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">Spielraum beitreten</h1>
                    <a href="/room" class="btn btn-outline-secondary" type="button">
                        <i class="bi bi-house me-2"></i>Zurück zur Übersicht
                    </a>
                </div>
                <hr>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Einladungslink</h5>
                        <div class="input-group">
                            <input type="text" class="form-control"
                                   value="{{ invitationLink }}"
                                   id="roomLink"
                                   readonly
                                   style="width: auto; min-width: 100%;"
                                   size="{{ invitationLink|length }}">
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Teilnehmer</h5>

                        {% if users|length > 0 %}
                            <div class="list-group">
                                {% for user in users %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-person-circle me-2"></i>
                                            {{ user.email }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                Noch keine Spieler beigetreten.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
