{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h1>Game</h1>
                    <div>
                        <a href="/room" class="btn btn-outline-secondary" type="button">
                            <i class="bi bi-house me-2"></i>Zurück zur Übersicht
                        </a>
                    </div>
                </div>
                <h5 class="card-title">Spiel #{{ game[0].gameId }}</h5>
                <p class="card-text">
                     <span class="badge bg-info">
                                <i class="bi bi-people-fill me-1"></i>
                                {{ count ?? 0 }} Spieler
                     </span>
                    {% if game[0].date is defined and game[0].date %}
                        <span class="badge bg-secondary">
                                    <i class="bi bi-calendar me-1"></i>
                                    {{ game[0].date|date('d.m.Y') }}
                        </span>
                    {% endif %}
                    <span class="badge bg-success">
                    <i class="bi bi-trophy me-1"></i>
                    301 Double Out
                </span>
                    <span class="badge bg-danger">
                    <i class="bi bi-check-circle me-1"></i>
                    Beendet
                </span>
                </p>
                <p class="card-text text-muted">
                    <small>ID: {{ game[0].gameId }}</small>
                </p>
            </div>
        </div>

        <div class="card mb-4 mt-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-share me-2"></i>Statistik teilen
                    </button>
                    <div>
                        <button class="btn btn-outline-success me-2">
                            <i class="bi bi-download me-2"></i>PDF exportieren
                        </button>
                        <button class="btn btn-primary">
                            <i class="bi bi-arrow-repeat me-2"></i>Revanche
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
